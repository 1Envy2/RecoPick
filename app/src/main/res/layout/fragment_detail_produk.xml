                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/txtAlasanPenggunaan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mayoritas pengguna menyukai desain ringkas, performa lancar, dan fitur kamera fleksibel. Namun, daya tahan lipatan jangka panjang dan kapasitas baterai jadi diskusi."
